<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<!-- **********************  REST realm ********************** -->

	<http realm="Contact Manager REST-service" pattern="/contact/**" use-expressions="true">
	<!--<http realm="Contact Manager REST-service" auto-config="true" use-expressions="true">-->
		<!--<intercept-url pattern="/contact/**" access="hasRole('ROLE_USER')"/>-->
		<!--<intercept-url pattern="/contact/add*" access="hasAnyRole('ROLE_USER')"/>-->
		<!--<intercept-url pattern="/contact/update*" access="hasAnyRole('ROLE_USER')"/>-->
		<!--<intercept-url pattern="/contact/delete*" access="hasAnyRole('ROLE_USER')"/>-->
		<!--<intercept-url pattern="/contact/contacts/*" access="hasAnyRole('ROLE_USER')"/>-->

		<intercept-url pattern="/contact/update" access="hasRole('ROLE_USER')"/>
		<intercept-url pattern="/contact/add" access="hasRole('ROLE_USER')" />
		<intercept-url pattern="/contact/delete" access="hasRole('ROLE_USER') "/>
		<intercept-url pattern="/contact/contacts/*" access="hasRole('ROLE_USER') "/>
		<http-basic/>
	</http>

	<!-- ********************** users ********************** -->

	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="user1" password="1111" authorities="ROLE_USER" />
				<user name="user2" password="2222" authorities="ROLE_USER" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>